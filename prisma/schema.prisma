generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                       String                @id @default(cuid())
  name                     String?
  email                    String                @unique
  image                    String?
  createdAt                DateTime              @default(now())
  updatedAt                DateTime              @updatedAt
  courseId                 String?
  /// âœ… Sprint 2
  points                   Int                   @default(0)
  accounts                 Account[]
  completions              Completion[]
  memberships              GroupMember[]
  sessions                 Session[]
  badges                   UserBadge[]
  usedResearchVerifyTokens ResearchVerifyToken[] @relation("ResearchVerifyTokensUsedBy")
}

model Course {
  id    String @id @default(cuid())
  name  String @unique
  areas Area[]
}

model Area {
  id       String          @id @default(cuid())
  name     String
  courseId String
  course   Course          @relation(fields: [courseId], references: [id])
  groups   ResearchGroup[]

  @@unique([courseId, name])
}

model ResearchGroup {
  id       String        @id @default(cuid())
  name     String
  areaId   String
  members  GroupMember[]
  research Research[]
  area     Area          @relation(fields: [areaId], references: [id])
}

model GroupMember {
  id      String        @id @default(cuid())
  userId  String
  groupId String
  role    MemberRole    @default(MEMBER)
  group   ResearchGroup @relation(fields: [groupId], references: [id])
  user    User          @relation(fields: [userId], references: [id])

  @@unique([userId, groupId])
}

model Research {
  id           String                @id @default(cuid())
  title        String
  description  String?
  isHidden     Boolean               @default(false)
  createdAt    DateTime              @default(now())
  groupId      String
  isApproved   Boolean               @default(false)
  completions  Completion[]
  group        ResearchGroup         @relation(fields: [groupId], references: [id])
  verifyTokens ResearchVerifyToken[] @relation("ResearchVerifyTokens")
}

model Completion {
  id            String         @id @default(cuid())
  userId        String
  researchId    String
  type          CompletionType @default(SIMPLE)
  pointsAwarded Int
  createdAt     DateTime       @default(now())
  research      Research       @relation(fields: [researchId], references: [id])
  user          User           @relation(fields: [userId], references: [id])

  @@unique([userId, researchId, type])
  @@index([createdAt])
  @@index([researchId, createdAt])
}

model UserBadge {
  id        String    @id @default(cuid())
  userId    String
  code      BadgeCode
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, code])
  @@index([createdAt])
}

model ResearchVerifyToken {
  id         String   @id @default(cuid())
  researchId String
  tokenHash  String   @unique
  createdAt  DateTime @default(now())

  usedAt       DateTime?
  usedByUserId String?
  expiresAt    DateTime?

  research   Research @relation("ResearchVerifyTokens", fields: [researchId], references: [id], onDelete: Cascade)
  usedByUser User?    @relation("ResearchVerifyTokensUsedBy", fields: [usedByUserId], references: [id], onDelete: SetNull)

  @@index([researchId, createdAt])
  @@index([researchId, usedAt])
}

/// Auth.js / NextAuth tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum MemberRole {
  ADMIN
  MEMBER
}

enum CompletionType {
  SIMPLE
  VERIFIED
}

enum BadgeCode {
  BRONZE_1
  BRONZE_2
  BRONZE_3
  VERIFIED_1
}
